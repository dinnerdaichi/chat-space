%div.side-bar
  .side-bar__username-box
    = current_user.name
    .icon
      = link_to new_group_path(current_user) do
        = icon('fa','edit') 
      = link_to edit_user_path(current_user) do
        = icon('fa','cog') 
  .side-bar__GroupBox
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .message 
            = group.name
          .group__message
            = group.show_last_message

          